generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String
  image     String?
  createdAt DateTime
  updatedAt DateTime
}

model Session {
  sid    String      @id @db.VarChar
  sess   Json        @db.Json
  expire DateTime    @db.Timestamp(6)

  @@index([expire], name: "IDX_Session_expire")
}
